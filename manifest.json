{
  "manifest_version": 2,
  "name": "Warframe Helper",
  "version": "1.0",
  "description": "This extension provides alerts and tools for Warframe.",

  "browser_action": {
    "default_icon": "images/icon-48.png",
    "default_popup": "popup.html"
  },
  
  "background": {
	"scripts": ["scripts/jquery.js", "scripts/background.js"],
	"persistent": false
  },
  
  "content_scripts": [
	{
		"matches": ["<all_urls>"],
		"js": ["scripts/jquery.js"]
	}
  ],

  "icons": {
    "16" : "images/icon-16.png",
    "48" : "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  
  "permissions": [
	"notifications",
	"alarms",
	"storage"
  ]
}